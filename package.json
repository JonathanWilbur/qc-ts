    "description": "Qualified Certificates in TypeScript, per IETF RFC 3739.",
    "devDependencies": {
        "@babel/core": "^7.11.4",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-typescript": "^7.10.4",
        "@types/benchmark": "^1.0.33",
        "@types/node": "^14.6.0",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "babel-jest": "^26.3.0",
        "benchmark": "^2.1.4",
        "eslint": "^7.7.0",
        "jest": "^26.4.1",
        "jest-junit": "^11.1.0",
        "npm-check-updates": "^7.1.1",
        "prettier": "^2.0.5",
        "prettier-plugin-organize-imports": "^1.1.1",
        "sloc": "^0.2.1",
        "ts-loader": "^8.0.2",
        "typescript": "^4.0.2",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "directories": {
        "doc": "documentation",
        "test": "test"
    },
    "files": [
        "dist/node/**/*",
        "locales/**/*",
        "schema/**/*"
    ],
    "keywords": [
        "qualified",
        "certificates",
        "pkix",
        "x509",
        "x.509",
        "cert",
        "pki"
    ],
    "license": "MIT",
    "main": "./dist/node/index.js",
    "name": "qc-ts",
    "scripts": {
        "benchmark": "node ./test/benchmark.js",
        "breaking-update": "npx ncu -u && npm install",
        "build": "npx tsc --incremental && npx webpack",
        "build-node": "npx tsc --incremental",
        "build-web": "npx webpack",
        "clean": "rm -rf dist; mkdir -p dist",
        "line-count": "npx sloc source",
        "lint": "npx eslint --config .eslintrc.yml './source/**/*.ts' || true",
        "prettify": "npx prettier './source/**/*.ts' --write",
        "test": "npx jest --ci --reporters=default --reporters=jest-junit --coverage"
    },
    "types": "./dist/node/index.d.ts",
    "version": "0.1.0",
    "dependencies": {
        "asn1-ts": "^3.3.1",
        "x500-ts": "^1.2.0"
    }
}
